<div class="head-bar">
    <div class="main-head">
        <div class="center-wrapper">
            <div class="pure-g-r">
                <div class="pure-u-1-5">
                    <div class="logo-wrapper">
                        {{#link-to 'index' class="logo" title="back home"}}{{/link-to}}
                    </div>
                    <div class="menu-link" {{action toggleProperty "menuExpanded"}}>
                        <i class="fa fa-reorder fa-lg fa-inverse"></i>
                    </div>
                </div>
                <div {{bind-attr class=":pure-u-4-5 menuExpanded :menu-list"}}>
                    <div class="navigation-wrapper">
                        {{ partial "navigation"}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ partial "searchBar"}}
</div>

<div class="content">
    {{#if GLOBE.loading}}
        {{! show loading indicator !}}
        <div class="loading-overlay"></div>
    {{/if}}
    <div class="outlet">
        <div class="pure-g">
            <div class="pure-u-1">
                {{alert-box contentBinding="GLOBE.alert.search"}}
            </div>
        </div>
        {{ outlet }}
        <div class="pure-g footer">
            <div class="pure-u-1">
                <div class="text-content">
                    <p class="no-width-limit">
                        Want to <a href="https://trac.torproject.org/projects/tor/newticket?component=Globe">report a bug</a>, contribute or view the source? Check out the repository <a href="https://gitweb.torproject.org/globe.git">on the Tor Project's gitweb</a>.
                        "Tor" and the "Onion Logo" are registered trademarks of The Tor Project, Inc.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

